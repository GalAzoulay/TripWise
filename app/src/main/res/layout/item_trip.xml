<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_size"
    android:layout_marginHorizontal="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/rounded_card_background"
    android:elevation="@dimen/card_elevation">

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tokyo"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnOptions"
        android:layout_marginEnd="@dimen/margin_small"/>

    <TextView
        android:id="@+id/tvDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDestination"
        android:text="May 10 - June 15"
        android:textSize="@dimen/text_small"
        android:textColor="@android:color/darker_gray"/>

    <ImageButton
        android:id="@+id/btnOptions"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_three_dots"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/trip_options"
        android:padding="@dimen/_0dp"
        android:scaleType="fitCenter"/>

</RelativeLayout>