<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_size"
    app:cardElevation="@dimen/_2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_shared_profile_picture"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:src="@drawable/ic_user_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_shared_username"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text="@string/username"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_shared_timestamp"
            app:layout_constraintEnd_toStartOf="@id/btn_shared_options"
            app:layout_constraintStart_toEndOf="@id/iv_shared_profile_picture"
            app:layout_constraintTop_toTopOf="@id/iv_shared_profile_picture" />

        <TextView
            android:id="@+id/tv_shared_timestamp"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text="Just now"
            android:textSize="@dimen/_12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_shared_profile_picture"
            app:layout_constraintEnd_toStartOf="@id/btn_shared_options"
            app:layout_constraintStart_toEndOf="@id/iv_shared_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/tv_shared_username" />

        <ImageButton
            android:id="@+id/btn_shared_options"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/options"
            android:src="@drawable/ic_three_dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?android:attr/textColorSecondary"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_shared_text"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:text="@string/this_is_the_caption_for_the_shared_trip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_shared_profile_picture" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_shared_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_shared_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_shared_photo_1"
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/image_size"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:adjustViewBounds="true"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/iv_shared_photo_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/circle_background"
                tools:src="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/iv_shared_photo_2"
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/image_size"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_shared_photo_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_small"
                android:background="@drawable/circle_background"
                android:visibility="gone"
                tools:src="@tools:sample/backgrounds/scenic" />

            <View
                android:id="@+id/view_more_photos_overlay"
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/_0dp"
                android:background="#80000000"
                app:layout_constraintStart_toStartOf="@id/iv_shared_photo_2"
                app:layout_constraintEnd_toEndOf="@id/iv_shared_photo_2"
                app:layout_constraintTop_toTopOf="@id/iv_shared_photo_2"
                app:layout_constraintBottom_toBottomOf="@id/iv_shared_photo_2"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_more_photos_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/view_more_photos_overlay"
                app:layout_constraintEnd_toEndOf="@id/view_more_photos_overlay"
                app:layout_constraintTop_toTopOf="@id/view_more_photos_overlay"
                app:layout_constraintBottom_toBottomOf="@id/view_more_photos_overlay"
                android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>