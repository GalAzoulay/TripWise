<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_conversation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size">

        <ImageView
            android:id="@+id/iv_other_user_profile_picture"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_other_username"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_other_user_profile_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Jane Doe" />

        <TextView
            android:id="@+id/tv_last_message"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size"
            android:layout_marginTop="@dimen/card_elevation"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/iv_other_user_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/tv_other_username"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Hey, did you see the new post?" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>